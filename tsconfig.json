{
  "extends": "@tsconfig/node18/tsconfig.json",
  "include": ["src/**/*", "codegen.ts"],
  "exclude": ["node_modules", "**/*.spec.ts"],
  "compilerOptions": {
    "rootDirs": ["src"],
    "outDir": "dist",
    "lib": ["esnext"],
    "target": "es2020",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "types": ["node"]
  }
}
